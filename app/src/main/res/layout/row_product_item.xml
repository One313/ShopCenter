<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="strategyProductViewModel"
            type="com.example.shopcenter.viewmodel.strategyproductviewmodel.StrategyProductViewModel" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_holder_product"
        android:onClick="@{()->strategyProductViewModel.onClickProductItems(position)}">

        <ImageView
            android:id="@+id/image_view_row_latest"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_row_latest_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_view_row_latest_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@{strategyProductViewModel.productItems.get(position).name}"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/text_view_row_latest_price"
            app:layout_constraintEnd_toEndOf="@+id/image_view_row_latest"
            app:layout_constraintStart_toStartOf="@+id/image_view_row_latest"
            app:layout_constraintTop_toBottomOf="@+id/image_view_row_latest" />

        <TextView
            android:id="@+id/text_view_row_latest_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@{strategyProductViewModel.productItems.get(position).price}"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/image_view_row_latest"
            app:layout_constraintStart_toStartOf="@+id/image_view_row_latest"
            app:layout_constraintTop_toBottomOf="@+id/text_view_row_latest_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>